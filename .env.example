# Golf Swing Video Analysis Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Golf Swing Video Analyzer"

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example: postgresql://postgres:password@localhost:5432/golf_analyzer
DATABASE_URL=postgresql://user:password@localhost:5432/golf_analyzer

# Direct database URL (for Prisma migrations)
DIRECT_URL=${DATABASE_URL}

# ============================================================================
# Cloudflare R2 Storage Configuration
# ============================================================================
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_BUCKET_NAME=golf-videos
R2_PUBLIC_URL=https://your-bucket.r2.dev

# R2 Configuration
R2_ENDPOINT=https://${R2_ACCOUNT_ID}.r2.cloudflarestorage.com

# ============================================================================
# Video Configuration
# ============================================================================
# Maximum video file size in MB (default: 500MB)
NEXT_PUBLIC_MAX_VIDEO_FILE_SIZE_MB=500

# Default video frames per second (default: 30)
NEXT_PUBLIC_DEFAULT_VIDEO_FPS=30

# Supported video MIME types (comma-separated)
NEXT_PUBLIC_SUPPORTED_VIDEO_TYPES=video/mp4,video/webm,video/ogg,video/quicktime,video/x-msvideo,video/x-matroska

# Video retention period in days (default: 30)
VIDEO_RETENTION_DAYS=30

# ============================================================================
# AI/ML Configuration
# ============================================================================
# MediaPipe model CDN path
NEXT_PUBLIC_MEDIAPIPE_MODEL_PATH=https://cdn.jsdelivr.net/npm/@mediapipe/pose

# Enable/disable pose detection feature
NEXT_PUBLIC_ENABLE_POSE_DETECTION=true

# MediaPipe model complexity (0=lite, 1=full, 2=heavy)
NEXT_PUBLIC_MEDIAPIPE_MODEL_COMPLEXITY=1

# Pose detection confidence threshold (0.0-1.0)
NEXT_PUBLIC_POSE_DETECTION_MIN_CONFIDENCE=0.5

# ============================================================================
# Feature Flags
# ============================================================================
# Enable MATLAB integration (requires MATLAB setup)
NEXT_PUBLIC_FEATURE_MATLAB_INTEGRATION=false

# Enable 3D visualization (Three.js)
NEXT_PUBLIC_FEATURE_3D_VISUALIZATION=false

# Enable advanced video editing
NEXT_PUBLIC_FEATURE_ADVANCED_EDITING=true

# Enable video sharing
NEXT_PUBLIC_FEATURE_VIDEO_SHARING=true

# ============================================================================
# Authentication Configuration
# ============================================================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_random_secret_here_use_openssl_rand_base64_32

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
NEXT_PUBLIC_SENTRY_DSN=

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================================================
# Rate Limiting (Upstash Redis)
# ============================================================================
# Get these from Upstash Dashboard > Redis > Details
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Rate limit: requests per time window
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=10s

# ============================================================================
# Email Configuration (Optional - SendGrid)
# ============================================================================
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Development Tools
# ============================================================================
# Enable debug logging
DEBUG=false

# Enable React strict mode
NEXT_PUBLIC_STRICT_MODE=true

# ============================================================================
# Security
# ============================================================================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session secret (for cookies)
SESSION_SECRET=generate_another_random_secret_here

# ============================================================================
# Testing
# ============================================================================
# Test database URL (used in CI/CD)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/golf_analyzer_test

# ============================================================================
# Instructions
# ============================================================================
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Generate secrets:
#    openssl rand -base64 32
#
# 3. Fill in your actual values in .env
#
# 4. Never commit .env to version control (already in .gitignore)
#
# 5. For production, set these in your hosting provider's dashboard:
#    - Vercel: Settings > Environment Variables
#    - Railway: Variables tab
#    - Render: Environment tab
